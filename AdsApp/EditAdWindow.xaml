<Window x:Class="AdsApp.EditAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Объявление" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Заголовок:" VerticalAlignment="Center"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Margin="5,5,0,5"/>

        <!-- Город -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Город:" VerticalAlignment="Center"/>
        <ComboBox x:Name="CityComboBox" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"
                  DisplayMemberPath="Name" SelectedValuePath="CityId"/>

        <!-- Категория -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" VerticalAlignment="Center"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"
                  DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>

        <!-- Тип -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Тип:" VerticalAlignment="Center"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="3" Grid.Column="1" Margin="5,5,0,5"
                  DisplayMemberPath="Name" SelectedValuePath="AdTypeId"/>

        <!-- Статус -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" VerticalAlignment="Center"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="4" Grid.Column="1" Margin="5,5,0,5"
                  DisplayMemberPath="Name" SelectedValuePath="StatusId"/>

        <!-- Цена -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Цена:" VerticalAlignment="Center"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="5" Grid.Column="1" Margin="5,5,0,5"/>

        <!-- Описание -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Описание:" VerticalAlignment="Top"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="6" Grid.Column="1" Margin="5,5,0,5"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <!-- Фото -->
        <StackPanel Grid.Row="0" Grid.RowSpan="6" Grid.Column="2" Margin="10,0,0,0">
            <Image x:Name="AdImage" Width="120" Height="120" Margin="0,0,0,5"/>
            <Button Content="Выбрать фото" Click="SelectImageButton_Click" />
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="3"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="90" Margin="0,10,5,0"
                    Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="0,10,0,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
